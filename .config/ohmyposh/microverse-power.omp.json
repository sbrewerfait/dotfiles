{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#111111",
          "foreground": "#6060FF",
          "powerline_symbol": "\ue0b0",
          "leading_powerline_symbol": "\ue0d7",
          "style": "powerline",
          "template": " ðŸ« {{ .UserName }}ðŸ« ",
          "type": "session"
        },
        {
          "background": "#111111",
          "foreground": "#ff3336",
          "powerline_symbol": "\ue0b0",
          "leading_powerline_symbol": "\ue0d7",
          "style": "powerline",
          "template": "- root \uf0e7",
          "type": "root"
        },
        {
          "background": "#111111",
          "foreground": "#007eff",
          "powerline_symbol": "\ue0b0",
          "leading_powerline_symbol": "\ue0d7",
          "properties": {
            "folder_separator_icon": "/",
            "style": "letter"
          },
          "style": "powerline",
          "template": "\ue5ff {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "#111111",
          "foreground": "#ff7800",
          "powerline_symbol": "\ue0b0",
          "leading_powerline_symbol": "\ue0d7",
          "properties": {
            "fetch_stash_count": true,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        {
          "background": "#33DD2D",
          "background_templates": [
            "{{ if gt .Code 0 }}#ff0004{{ end }}"
          ],
          "foreground": "#242424",
          "powerline_symbol": "\ue0b0",
          "leading_powerline_symbol": "\ue0d7",
          "properties": {
            "always_enabled": true
          },
          "style": "powerline",
          "template": " \uea6c ",
          "type": "status"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "background": "#111111",
          "foreground": "#6060FF",
          "powerline_symbol": "\ue0b0",
          "leading_powerline_symbol": "\ue0d7",
          "properties": {
            "playing_icon": "\uE602 ",
            "paused_icon": "\uF8E3 ",
            "stopped_icon": "\uF04D "
          },
          "style": "powerline",
          "template": " \uf1bc {{ .Icon }}{{ if ne .Status \"stopped\" }}{{ .Artist }} - {{ .Track }}{{ end }} ",
          "type": "spotify"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#f1184c",
          "style": "plain",
          "template": "\u279c ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 3
}
